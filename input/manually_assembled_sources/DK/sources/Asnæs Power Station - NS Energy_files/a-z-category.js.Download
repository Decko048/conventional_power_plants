//         filterContainer.style.height = `${[...filterContainer.children].reduce((acc, curr) => acc + curr.offsetHeight, 0)}px`
//         filterTitle.style.display = "none";
//     }
// })

supplierTileArr.forEach(element => {
    element.addEventListener("click", () => {
        if (window.screen.width < 900) {
            element.style.height = "270px"
        }
    });
});

showBtnElementArr.forEach(element => {
    if (window.screen.availWidth < 900) {
        element.addEventListener("click", () => {
    const companiesSectionContainer = element.parentElement.parentElement;      
		const elementChildrenArr = [...element.parentElement.parentElement.children];
		const height = elementChildrenArr.reduce((acc, curr) => {
			return acc + curr.offsetHeight;
		    }, 0);
        companiesSectionContainer.style.height = `${height + 17}px`;
        element.style.display = 'none';	
        })
    }
});

hideBtnElementArr.forEach(element => {
    if (window.screen.availWidth < 900) {
        element.addEventListener("click", () => {
    const companiesSectionContainer = element.parentElement.parentElement.parentElement;
    const showBtn = companiesSectionContainer.querySelector(".company-index-container p");      
        companiesSectionContainer.style.height = "43px";
        showBtn.style.display = "flex";	
        })
    }
});