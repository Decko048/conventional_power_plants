const filterContainer = document.querySelector(".a-z-category-filter-container");
const filterTitle = document.querySelector(".filter-title");
const supplierTileArr = document.querySelectorAll(".supplier-tile");
const showBtnElementArr = Array.from(document.querySelectorAll(".company-a-z-container .companies-section-container .company-index-container p"));
const hideBtnElementArr = Array.from(document.querySelectorAll(".company-a-z-container .companies-section-container .company-details .top-container p"));
const firstCompanySectionContainer = document.querySelector("section.companies-section-container:first-of-type");
const firstCompanySectionContainerChildrenHeight = Array.from(firstCompanySectionContainer.children).reduce((acc, curr) => acc + curr.offsetHeight, 0);

if (window.screen.availWidth < 900) {
  firstCompanySectionContainer.style.height = `${firstCompanySectionContainerChildrenHeight + 17}px`;
}

